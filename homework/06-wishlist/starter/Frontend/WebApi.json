            "name": "name",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AuthReq"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
