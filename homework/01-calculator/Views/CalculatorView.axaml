<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:_01_calculator.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="_01_calculator.Views.CalculatorView"
             x:DataType="vm:CalculatorViewModel">
   <StackPanel>
       <TextBlock Text="{Binding DisplayText}" />       
       <Grid ColumnDefinitions="Auto, Auto, Auto, Auto, *" RowDefinitions="Auto, Auto, Auto, Auto, Auto, *">
           <Button Grid.Row="0" Grid.Column="0" Command="{Binding AppendCommand}" CommandParameter="7">7</Button>
           <Button Grid.Row="0" Grid.Column="1" Command="{Binding AppendCommand}" CommandParameter="8">8</Button>
           <Button Grid.Row="0" Grid.Column="2" Command="{Binding AppendCommand}" CommandParameter="9">9</Button>
           <Button Grid.Row="0" Grid.Column="3" Command="{Binding AppendCommand}" CommandParameter="/">/</Button>
        
           <Button Grid.Row="1" Grid.Column="0" Command="{Binding AppendCommand}" CommandParameter="4">4</Button>
           <Button Grid.Row="1" Grid.Column="1" Command="{Binding AppendCommand}" CommandParameter="5">5</Button>
           <Button Grid.Row="1" Grid.Column="2" Command="{Binding AppendCommand}" CommandParameter="6">6</Button>
           <Button Grid.Row="1" Grid.Column="3" Command="{Binding AppendCommand}" CommandParameter="*">*</Button>

           <Button Grid.Row="2" Grid.Column="0" Command="{Binding AppendCommand}" CommandParameter="1">1</Button>
           <Button Grid.Row="2" Grid.Column="1" Command="{Binding AppendCommand}" CommandParameter="2">2</Button>
           <Button Grid.Row="2" Grid.Column="2" Command="{Binding AppendCommand}" CommandParameter="3">3</Button>
           <Button Grid.Row="2" Grid.Column="3" Command="{Binding AppendCommand}" CommandParameter="-">-</Button>

           <Button Grid.Row="3" Grid.Column="0" Command="{Binding AppendCommand}" CommandParameter="0">0</Button>
           <Button Grid.Row="3" Grid.Column="1" Command="{Binding ClearCommand}">C</Button>
           <Button Grid.Row="3" Grid.Column="2" Command="{Binding AppendCommand}" CommandParameter="+">+</Button>
           <Button Grid.Row="3" Grid.Column="3" Command="{Binding CalculateCommand}">=</Button>
       </Grid>
   </StackPanel>
</UserControl>
